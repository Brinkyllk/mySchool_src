        <menuitem id="menu_standard" name="Standard" parent="menu_myschool_all" action="action_standard"/>
        <menuitem id="menu_subject" name="Subject" parent="menu_myschool_all" action="action_subject"/>
        <menuitem id="menu_course" name="Course" parent="menu_myschool_all" action="action_course"/>
        <menuitem id="menu_batch" name="Batch" parent="menu_myschool_all" action="action_batch"/>
        <menuitem id="menu_lecturer" name="Lecturer" parent="menu_myschool_all" action="action_lecturer"/>
        <menuitem id="menu_student" name="Student" parent="menu_myschool_all" action="action_student"/>
