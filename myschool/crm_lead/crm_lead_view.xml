                                <field name="saturday" widget="many2many_tags" options="{'no_create_edit':'1'}"/>
                                <field name="sunday" widget="many2many_tags" options="{'no_create_edit':'1'}"/>
                            </group>
                        </page>
                    </page>
                </xpath>
                <xpath  expr="//group[@string='Misc']" position="inside">
                    <field name="inquiry_date"/>
                </xpath>
