<?xml version="1.0"?>
<openerp>
    <data>

        <!-- ******************** Academic Term ****************** -->
        <record id="view_semester_tree" model="ir.ui.view">
            <field name="name">op.semester.tree</field>
            <field name="model">op.semester</field>
            <field name="arch" type="xml">
                <tree string="Academic Term">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_semester_form" model="ir.ui.view">
            <field name="name">op.semester.form</field>
            <field name="model">op.semester</field>
            <field name="arch" type="xml">
                <form string="Academic Term" version="7.0">
                    <sheet>
                        <separator string="Academic Term" colspan="4" />
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_op_semester_search" model="ir.ui.view">
			<field name="name">op.semester.search</field>
			<field name="model">op.semester</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Academic Term">
					<field name="name" />
					<field name="code" />
				</search>
			</field>
		</record>

        <record model="ir.actions.act_window" id="act_open_op_semester_view">
			<field name="name">Academic Term</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">op.semester</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_op_semester_search" />
		</record>



        <!-- ******************** Standard ****************** -->
        <record id="view_standard_tree" model="ir.ui.view">
            <field name="name">op.standard.tree</field>
            <field name="model">op.standard</field>
            <field name="arch" type="xml">
                <tree string="Standard">
                    <field name="course_id"/>
                    <field name="semester_id"/>
                    <!--<field name="code"/>-->
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_standard_form" model="ir.ui.view">
            <field name="name">op.standard.form</field>
            <field name="model">op.standard</field>
            <field name="arch" type="xml">
                <form string="Standard" version="7.0">
                    <sheet>
                        <separator string="Standard" colspan="4" />
                        <group>
                            <field name="course_id"/>
                            <field name="semester_id"/>
                            <!--<field name="code"/>-->
                            <field name="name"/>
                            <field name="subject_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_op_standard_search" model="ir.ui.view">
			<field name="name">op.standard.search</field>
			<field name="model">op.standard</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Standard">
                    <field name="course_id"/>
                    <field name="semester_id"/>
                    <!--<field name="code"/>-->
                    <field name="name"/>
				</search>
			</field>
		</record>

        <record model="ir.actions.act_window" id="act_open_op_standard_view">
			<field name="name">Standard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">op.standard</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_op_standard_search" />
		</record>

    </data>
</openerp>
