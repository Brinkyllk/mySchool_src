<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_op_subject_mapping_form" model="ir.ui.view">
            <field name="name">op.subject.mapping.form</field>
            <field name="model">op.subject.mapping</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Subject Mapping">
                    <sheet>
                        <group>
                            <field name="stu_course_map_id" invisible="True"/>
                            <field name="student_id" invisible="True"/>
                            <field name="course_id" />
                            <field name="standard_id" />
                            <field name="subject_id"  />
                            <field name="grade"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_subject_mapping_view">
            <field name="name">Subject Mapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.subject.mapping</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <!--<field name="search_view_id" ref="view_op_student_batch_mapping_search" />-->
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_subject_mapping_view_form">
            <field name="act_window_id" ref="act_open_op_subject_mapping_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_subject_mapping_form" />
        </record>

        <record id="view_op_subject_mapping_tree" model="ir.ui.view">
            <field name="name">op.subject.mapping.tree</field>
            <field name="model">op.subject.mapping</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Subject Mapping">
                     <field name="stu_course_map_id" invisible="True"/>
                     <field name="student_id" invisible="True"/>
                     <field name="course_id" />
                     <field name="standard_id"/>
                     <field name="subject_id"/>
                     <field name="grade"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_subject_mapping_view">
            <field name="name">Subject Mapping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.subject.mapping</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <!--<field name="search_view_id" ref="view_op_student_batch_mapping_search" />-->
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_subject_mapping_view_tree">
            <field name="act_window_id" ref="act_open_op_subject_mapping_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_subject_mapping_tree" />
        </record>

    </data>
</openerp>