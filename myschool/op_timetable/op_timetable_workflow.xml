<?xml version="1.0"?>
<openerp>
    <data>
        <!-- Workflow -->
        <record model="workflow" id="workflow_op_timetable">
            <field name="name">op.timetable.basic</field>
            <field name="osv">op.timetable</field>
            <field name="on_create" eval="True" />
        </record>

        <!-- Activity -->
        <!--<record id="action_planned" model="workflow.activity">-->
