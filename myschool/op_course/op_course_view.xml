<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_course_form" model="ir.ui.view">
            <field name="name">op.course.form</field>
            <field name="model">op.course</field>
            <field name="arch" type="xml">
                <form string="MySchool" version="7.0">
                    <sheet>
                        <separator string="Course" colspan="4" />
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="level"/>
                            <!--<field name="search_course"/>-->
                        </group>
                        <notebook>
                            <page string="Subjects">
                                <separator colspan="4" string="Subjects"/>
                                    <field name="subject_ids"/>
                                <!--<field name= "level" string= "Share it... :" widget= "test" />-->
                            </page>
                            <page string="Product">
                                <separator colspan="4" string="Product Details"/>
                                <group>
                                    <field name="product_id"/>
                                    <field name="price"/>
                                    <!--<field name="category"/>-->
                                    <!--<field name="state"/>-->
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_course_tree" model="ir.ui.view">
            <field name="name">op.course.tree</field>
            <field name="model">op.course</field>
            <field name="arch" type="xml">
                <tree string="MySchool" version="7.0">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="level"/>
                    <!--<field name="subject_ids"/>-->
                </tree>
            </field>
        </record>

        <record id="view_op_course_search" model="ir.ui.view">
			<field name="name">op.course.search</field>
			<field name="model">op.course</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Course">
					<field name="code" />
					<field name="name" />
					<field name="level" />
                    <field name="subject_ids"/>
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Course Level" domain="[]" context="{'group_by':'level'}" />

					</group>
				</search>
			</field>
		</record>

        <record model="ir.actions.act_window" id="act_open_op_course_view">
			<field name="name">Course</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">op.course</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_op_course_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

    </data>
</openerp>