<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_course_form" model="ir.ui.view">
            <field name="name">op.course.form</field>
            <field name="model">op.course</field>
            <field name="arch" type="xml">
                <form string="MySchool" version="7.0">
                    <sheet>
                        <!--<label for="name" class="oe_edit_only"/>-->
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="level"/>
                        </group>
                        <notebook>
                            <page string="Subjects">
                                <separator colspan="4" string="Subjects"/>
                                    <field name="subject_ids"/>
                                <!--<field name= "level" string= "Share it... :" widget= "test" />-->
                            </page>
                            <page string="Product">
                                <separator colspan="4" string="Product Details"/>
                                <group>
                                    <field name="product"/>
                                    <field name="list_price"/>
                                    <field name="state"/>
                                </group>
                                <group>
                                    <!--<field name="category_id"/>-->
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_course_tree" model="ir.ui.view">
            <field name="name">op.course.tree</field>
            <field name="model">op.course</field>
            <field name="arch" type="xml">
                <tree string="MySchool" version="7.0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="level"/>
                    <field name="subject_ids"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>